<%= bootstrap_form_for [@image, @comment] do |f| %>
  <%= f.text_area :body %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit "Yeah Boy" %>
<% end %>
<h1> Add a new comment </h1>
<%= bootstrap_form_for [@image, @image.comments.build] do |f| %>
  <%= f.text_field :body %>

  <%#= f.hidden_field :user_id, value: current_user.id %>

  <%= f.submit "Send", class: "btn btn-primary" %>
<% end %>
