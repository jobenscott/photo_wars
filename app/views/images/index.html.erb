<div class="row"> 
<% top_three = @animals_images.sample(3) %>

  <% top_three.each do |img| %>
    <div class='col-md-3'>
        <h2><%= img.title %></h2>
        <h6><%= link_to image_tag(img.url), image_path(img) %></h6>
        <h3><%= img.categories %></h3>
        <h3><%= img.vote %></h3>
        <p><%= img.description %></p>
        <p><%= img.user_id %></p>
    </div>
    <% end %>
  <%# end %>
    
  </div>
